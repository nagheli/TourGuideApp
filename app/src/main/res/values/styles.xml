<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="locationTitle">
        <item name="android:textSize">@dimen/location_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/location_title_margin</item>
    </style>

    <style name="locationItems">
        <item name="android:textSize">@dimen/location_item_text_size</item>
        <item name="android:layout_marginRight">@dimen/location_item_margin_right</item>
        <item name="android:layout_marginLeft">@dimen/location_item_margin_left</item>
        <item name="android:layout_marginBottom">@dimen/location_item_margin_bottom</item>
        <item name="android:textColorLink">@color/blackColor</item>
    </style>

    <style name="tabStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="tabIndicatorColor">@color/whiteColor</item>
        <item name="tabSelectedTextColor">@color/whiteColor</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextColor">@color/tabColor</item>
        <item name="tabMaxWidth">@dimen/tab_width</item>
    </style>

</resources>
